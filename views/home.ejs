<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>Home</title>

  <!-- Include Bootstrap CSS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
   
  <style>
    body {
      background-color: rgb(143, 143, 195);
    }
     #hname{
      display: flex;
      /* position: relative; */
       /* text-align: center; */
        justify-content: center;
      color: rgb(11, 196, 209);
     }
  </style>
</head>
<body>

  <!-- Include Registration Form Content -->
  <h1 id="hname"  class="text-center">USER DETAILS</h1>
  
  <div class="container bg-success" id="bar">
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Age</th>
          <th>Email</th>
          <th>Phone</th>
        </tr>
      </thead>
      <tbody>
        <% if (userData.length > 0) { %>
          <% userData.forEach(user => { %>
            <tr>
              <td><%= user.name %></td>
              <td><%= user.age %></td>
              <td><%= user.email %></td>
              <td><%= user.phone %></td>
              <td>
                <form action="/edit/<%= user.id %>" method="get">
                  <input class="btn btn-primary btn-lg" type="submit" value="Edit">
                  <!-- Log the user id for debugging -->
                  <!-- <script>console.log('user.id:', <%= user.id %>);</script> -->
                </form>
              </td>
              <td>
                <form action="/delete/<%= user.id %>" method="get">
                  <input type="hidden" name="id" value="<%= user.id %>">
                  <input class="btn btn-danger" type="submit" value="delete">
                </form>
              </td>
            </tr>
          <% }); %>
        <% } else { %>
          <tr>
            <td colspan="4">No user data available</td>
          </tr>
        <% } %>

       
      </tbody>
        
      
      <form action="/" method="get">
        <input class="btn btn-danger mx-5" type="submit" value="ADD USER">
      </form>

  <!-- Include Bootstrap and jQuery Scripts -->
  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>

</body>
</html>


